<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="New Product"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <EditText
        android:drawableStart="@drawable/ic_whatshot_black_24dp"
        android:id="@+id/product_name_edittext"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Product Name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:id="@+id/product_price_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:hint="Product Price" />

    <EditText
        android:id="@+id/image_url_edit_text"
        android:layout_width="wrap_content"
        android:width="200dp"
        android:drawableStart="@drawable/ic_image_black_24dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/add_product_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="Add Product"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>